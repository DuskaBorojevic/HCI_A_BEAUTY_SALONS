<UserControl x:Class="HCI_A.Controls.CustomTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40">
    <DockPanel Background="{DynamicResource PrimaryBrush}" LastChildFill="True" MouseLeftButtonDown="DockPanel_MouseLeftButtonDown">
        <!-- Naslov -->
        <TextBlock x:Name="TitleText"
                   Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="White"
                   VerticalAlignment="Center"
                   FontWeight="Bold"
                   Margin="10,0,0,0"
                   DockPanel.Dock="Left"/>

        <!-- Dugmići desno -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
            <!-- Minimize -->
            <Button Width="40" Height="40"
                    Style="{StaticResource TitleBarButtonStyle}"
                    Click="Minimize_Click">
                <Path Data="M 10,20 L 30,20"
                      Stroke="White" StrokeThickness="2"/>
            </Button>

            <!-- Maximize/Restore -->
            <Button Width="40" Height="40"
                    Style="{StaticResource TitleBarButtonStyle}"
                    Click="MaximizeRestore_Click">
                <Path x:Name="MaximizeIcon"
                      Data="M 10,10 L 30,10 L 30,30 L 10,30 Z"
                      Stroke="White" StrokeThickness="2"/>
            </Button>

            <!-- Close -->
            <Button Width="40" Height="40"
                    Style="{StaticResource TitleBarButtonStyle}"
                    Click="Close_Click">
                <Path Data="M 10,10 L 30,30 M 30,10 L 10,30"
                      Stroke="White" StrokeThickness="2"/>
            </Button>
        </StackPanel>
    </DockPanel>
</UserControl>
