<Application x:Class="HCI_A.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HCI_A"
             xmlns:converters="clr-namespace:HCI_A.Converters"
             xmlns:controls="clr-namespace:HCI_A.Controls"
             StartupUri="Windows/LoginPage.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/Styles.xaml"/>
                <ResourceDictionary Source="/Resources/Themes/LightTheme.xaml"/>
                <ResourceDictionary Source="/Resources/Languages/EnglishLanguage.xaml"/>
                <ResourceDictionary Source="/Resources/Styles/ButtonStyles.xaml"/>
                <!--<ResourceDictionary Source="/Resources/ActionButtons.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>

            <converters:EmptyTextToVisibilityConverter x:Key="EmptyTextToVisibilityConverter"/>
            <converters:BoolToAvailabilityConverter x:Key="BoolToAvailabilityConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:HighContrastToShadowColorConverter x:Key="HighContrastToShadowColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
