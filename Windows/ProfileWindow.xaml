<Window x:Class="HCI_A.Windows.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:HCI_A.Controls"
        Title="Profile"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        FontFamily="{DynamicResource DefaultFont}"
        Background="{DynamicResource BackgroundBrush}">

    <Border BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="2" CornerRadius="12" Padding="0">
        <DockPanel LastChildFill="True">

            <DockPanel DockPanel.Dock="Top" Background="{DynamicResource PrimaryBrush}" Height="40">
                <TextBlock Text="{DynamicResource MyProfile}"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="—" Width="40" Height="40"
                            Background="Transparent" Foreground="White"
                            FontSize="16" BorderThickness="0"
                            Click="Minimize_Click"/>
                    <Button Content="⬜" Width="40" Height="40"
                            Background="Transparent" Foreground="White"
                            FontSize="14" BorderThickness="0"
                            Click="MaximizeRestore_Click"/>
                    <Button Content="X" Width="40" Height="40"
                            Background="Transparent" Foreground="White"
                            FontSize="14" BorderThickness="0"
                            Click="Close_Click"/>
                </StackPanel>
            </DockPanel>

            <TabControl x:Name="MainTabControl"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="SemiBold">

                <TabItem Header="{DynamicResource MyProfile}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="30" Background="{DynamicResource SecondaryLightBrush}">

                       <TextBlock Text="{DynamicResource MyProfile}" 
                       FontFamily="{DynamicResource TitleFont}"
                       FontSize="26" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryBrush}" 
                       Margin="0,0,0,10"/>

                            <Border Background="{DynamicResource SurfaceBrush}"
                    CornerRadius="12"
                    Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{DynamicResource UsernameLabel}" 
                                       FontWeight="Bold"
                                       FontFamily="{DynamicResource SecondaryFont}"
                                       Foreground="{DynamicResource TextOnPrimaryBrush}"
                                       Background="{DynamicResource SecondaryLightBrush}"
                                       Padding="10, 10, 0, 10"
                                       Grid.Row="0" Grid.Column="0" Margin="0,8"/>

                                    <TextBox x:Name="UsernameTextBox" 
                               FontSize="18"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                                 Background="{DynamicResource SecondaryLightBrush}"
                                Padding="10, 10, 0, 10"   IsReadOnly="True" BorderThickness="0"
                               Grid.Row="0" Grid.Column="1" Margin="0,8"/>

                                    <TextBlock Text="{DynamicResource PasswordLabel}" 
                               FontWeight="Bold"
                               FontFamily="{DynamicResource SecondaryFont}"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                                Background="{DynamicResource SecondaryLightBrush}"
                                               Padding="10, 10, 0, 10"
                               Grid.Row="1" Grid.Column="0" Margin="0,8"/>
                                    <TextBox x:Name="PasswordTextBox" 
                               FontSize="18"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                                Background="{DynamicResource SecondaryLightBrush}"
                                Padding="10, 10, 0, 10" IsReadOnly="True" BorderThickness="0"
                               Grid.Row="1" Grid.Column="1" Margin="0,8"/>

                                    <TextBlock Text="{DynamicResource FirstNameLabel}" 
                               FontWeight="Bold"
                               FontFamily="{DynamicResource SecondaryFont}"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                                               Padding="10, 10, 0, 10"
                                                Background="{DynamicResource SecondaryLightBrush}"
                               Grid.Row="2" Grid.Column="0" Margin="0,8"/>
                                    <TextBox x:Name="FirstNameTextBox" 
                                                Background="{DynamicResource SecondaryLightBrush}"
                                               Padding="10, 10, 0, 10" IsReadOnly="True" BorderThickness="0"
                                FontSize="18"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                               Grid.Row="2" Grid.Column="1" Margin="0,8"/>

                                    <TextBlock Text="{DynamicResource LastNameLabel}" 
                               FontWeight="Bold"
                                Padding="10, 10, 0, 10"
                               FontFamily="{DynamicResource SecondaryFont}"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                                                Background="{DynamicResource SecondaryLightBrush}"
                               Grid.Row="3" Grid.Column="0" Margin="0,8"/>
                                    <TextBox x:Name="LastNameTextBox" 
                                FontSize="18"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                                                Background="{DynamicResource SecondaryLightBrush}"
                                               Padding="10, 10, 0, 10" IsReadOnly="True" BorderThickness="0"
                               Grid.Row="3" Grid.Column="1" Margin="0,8"/>

                                    <TextBlock Text="{DynamicResource EmailLabel}" 
                               FontWeight="Bold"
                               FontFamily="{DynamicResource SecondaryFont}"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                                               Padding="10, 10, 0, 10"
                                                Background="{DynamicResource SecondaryLightBrush}"
                               Grid.Row="4" Grid.Column="0" Margin="0,8"/>
                                    <TextBox x:Name="EmailTextBox" 
                                FontSize="18"
                               Foreground="{DynamicResource TextOnPrimaryBrush}"
                                                Background="{DynamicResource SecondaryLightBrush}"
                                                Padding="10, 10, 0, 10" IsReadOnly="True" BorderThickness="0"
                               Grid.Row="4" Grid.Column="1" Margin="0,8"/>
                                    <TextBlock x:Name="SalaryLabel" Text="{DynamicResource SalaryLabel}" 
                                       FontWeight="Bold"
                                       FontFamily="{DynamicResource SecondaryFont}"
                                       Foreground="{DynamicResource TextOnPrimaryBrush}"
                                       Padding="10, 10, 0, 10"
                                       Background="{DynamicResource SecondaryLightBrush}"
                                       Grid.Row="5" Grid.Column="0" Margin="0,8"
                                       Visibility="Collapsed"/>
                                                                <TextBox x:Name="SalaryTextBox"
                                     FontSize="18"
                                     Foreground="{DynamicResource TextOnPrimaryBrush}"
                                     Background="{DynamicResource SecondaryLightBrush}"
                                     Padding="10, 10, 0, 10" IsReadOnly="True" BorderThickness="0"
                                     Grid.Row="5" Grid.Column="1" Margin="0,8"
                                     Visibility="Collapsed"/>
                                </Grid>
                            </Border>


                            <Border Background="{DynamicResource BackgroundBrush}" 
                            Margin="0,20,0,0" 
                            Padding="20"
                            CornerRadius="12">
                            <Button x:Name="EditSaveButton"
                                Style="{DynamicResource PrimaryLargeButton}"
                                Content="{DynamicResource BtnEdit}"
                                Width="180" Height="50"
                                HorizontalAlignment="Left"
                                Background="{DynamicResource PrimaryBrush}"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="EditSaveButton_Click"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem x:Name="CartTabControl" Header="{DynamicResource CartsTab}">
                    <controls:OrdersControl x:Name="CartsControlInstance"/>
                </TabItem>

                <TabItem x:Name="OrdersTabControl" Header="{DynamicResource OrdersTab}">
                    <controls:OrdersControl x:Name="OrdersControlInstance"/>
                </TabItem>


                <TabItem x:Name="InvoicesTabControl" Header="{DynamicResource InvoicesTab}">
                    <controls:InvoicesControl x:Name="InvoicesControlInstance"/>
                </TabItem>

            </TabControl>
        </DockPanel>
    </Border>
</Window>
