<Window x:Class="HCI_A.Windows.ProductQuantityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Quantity"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource DefaultFont}">

    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{DynamicResource PrimaryBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{DynamicResource AddToCartTitle}"
                                   FontSize="18"
                                   FontFamily="{DynamicResource TitleFont}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextOnPrimaryBrush}"/>
                        <TextBlock Text="{DynamicResource SelectQuantityTitle}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextOnPrimaryBrush}"
                                   Opacity="0.8"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Style="{DynamicResource CloseButton}"
                            Click="CloseButton_Click"
                            Width="30" Height="30" Margin="2,5,2,0" VerticalAlignment="Top"/>
                </Grid>
            </Border>


            <StackPanel Grid.Row="1" Margin="30" VerticalAlignment="Center">

                <Border Background="{DynamicResource CardBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="ProductNameText"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PressedBrush}"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="ProductPriceText"
                                   FontSize="14"
                                   Foreground="{DynamicResource PrimaryBrush}"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
                <StackPanel Height="170">
                    <TextBlock Text="{DynamicResource Quantity}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="DecreaseBtn"
                                Content="−"
                                Style="{DynamicResource PrimaryIconButton}"
                                Foreground="{DynamicResource TextOnPrimaryBrush}"
                                VerticalAlignment="Center"
                                Background="{DynamicResource PrimaryLightBrush}"
                                Width="40" Height="40"
                                FontSize="20"
                                FontWeight="Bold"
                                Click="DecreaseBtn_Click"/>

                        <TextBox x:Name="QuantityTextBox"
                                 Text="1"
                                 Style="{DynamicResource InputStyle}"
                                 Width="60" Height="40"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 TextAlignment="Center"
                                 Background="{DynamicResource PrimaryDarkBrush}"
                                 Margin="10,0"
                                 PreviewTextInput="QuantityTextBox_PreviewTextInput"/>

                        <Button x:Name="IncreaseBtn"
                                Content="+"
                                Style="{DynamicResource PrimaryIconButton}"
                                Width="40" Height="40"
                                Foreground="{DynamicResource TextOnPrimaryBrush}"
                                Background="{DynamicResource PrimaryLightBrush}"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Click="IncreaseBtn_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="TotalPriceText"
                               Text="Total: 0.00 KM"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,15,0,0"/>
                </StackPanel>

                <!-- Quantity Selection -->
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{DynamicResource CardBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,12,12"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <Button Grid.Column="1"
                            Content="{DynamicResource AddToCartTitle}"
                            Style="{DynamicResource PrimaryLargeButton}"
                            Click="AddToCart_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
