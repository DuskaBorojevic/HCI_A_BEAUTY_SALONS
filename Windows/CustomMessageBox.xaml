<Window x:Class="HCI_A.Windows.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox"
        Width="400" Height="250"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False">

    <Border CornerRadius="12"
            Background="{DynamicResource SecondaryLightBrush}"
            BorderBrush="{DynamicResource PrimaryBrush}"
            BorderThickness="2"
            Padding="20"
            Effect="{DynamicResource MaterialShadow}">

        <DockPanel LastChildFill="True">

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBlock x:Name="HeaderTextBlock"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           VerticalAlignment="Center"
                           Text="Header"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="IconBlock"
                    Text="🛈" FontSize="24" VerticalAlignment="Top" Margin="0,0,10,0" Foreground="White"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="ContentTextBlock"
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontFamily="{DynamicResource DefaultFont}"
                               FontSize="14"/>
                </ScrollViewer>
            </StackPanel>

            <Button Content="OK"
                    Width="100" Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Style="{DynamicResource PrimaryButtonStyle}"
                    Click="OkButton_Click"/>
        </DockPanel>
    </Border>
</Window>
