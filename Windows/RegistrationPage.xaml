<Window x:Class="HCI_A.Windows.RegistrationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource RegistrationPageTitle}" 
        Height="820" Width="800"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid>
            <Image Source="/Resources/main_background.jpg"
                   Stretch="UniformToFill"/>
            <Rectangle Fill="{DynamicResource OverlayBrush}"/>
        </Grid>

        <Border Background="{DynamicResource CardBrush}" 
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="420"
                Margin="20"
                Effect="{DynamicResource MaterialShadow}">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40,45">

                    <TextBlock Text="{DynamicResource CreateNewAccount}" FontFamily="{DynamicResource TitleFont}" FontSize="30" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="{DynamicResource RegistrationDescription}" FontFamily="{DynamicResource SecondaryFont}" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource SecondaryBrush}" HorizontalAlignment="Center" Margin="0,0,0,30"/>


                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="{DynamicResource UsernameTB}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"
                                   FontSize="13"
                                   FontWeight="Medium"/>
                        <Border Background="{DynamicResource InputBackgroundBrush}"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="{DynamicResource InputBorderBrush}">
                            <TextBox x:Name="txtUsername"
                                     Height="45"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,10"
                                     Foreground="{DynamicResource TextBrush}"
                                     FontSize="15"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="{DynamicResource PasswordTB}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"
                                   FontSize="13"
                                   FontWeight="Medium"/>
                        <Border Background="{DynamicResource InputBackgroundBrush}"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="{DynamicResource InputBorderBrush}">
                            <PasswordBox x:Name="txtPassword"
                                         Height="45"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="15,10"
                                         Foreground="{DynamicResource TextBrush}"
                                         FontSize="15"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="{DynamicResource FirstNameTB}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"
                                   FontSize="13"
                                   FontWeight="Medium"/>
                        <Border Background="{DynamicResource InputBackgroundBrush}"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="{DynamicResource InputBorderBrush}">
                            <TextBox x:Name="txtFirstName"
                                     Height="45"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,10"
                                     Foreground="{DynamicResource TextBrush}"
                                     FontSize="15"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="{DynamicResource LastNameTB}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"
                                   FontSize="13"
                                   FontWeight="Medium"/>
                        <Border Background="{DynamicResource InputBackgroundBrush}"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="{DynamicResource InputBorderBrush}">
                            <TextBox x:Name="txtLastName"
                                     Height="45"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,10"
                                     Foreground="{DynamicResource TextBrush}"
                                     FontSize="15"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="{DynamicResource EmailTB}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"
                                   FontSize="13"
                                   FontWeight="Medium"/>
                        <Border Background="{DynamicResource InputBackgroundBrush}"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="{DynamicResource InputBorderBrush}">
                            <TextBox x:Name="txtEmail"
                                     Height="45"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="15,10"
                                     Foreground="{DynamicResource TextBrush}"
                                     FontSize="15"/>
                        </Border>
                    </StackPanel>

                    <Button Content="{DynamicResource Register}"
                            Style="{StaticResource PrimaryLargeButton}"
                            Height="48"
                            Margin="0,0,0,20"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Click="RegisterButton_Click"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="{DynamicResource AlreadyHaveAccount}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Height="18"/>
                        <Button Content="{DynamicResource LoginBTN}"
                                Style="{StaticResource LinkButtonStyle}"
                                Foreground="{DynamicResource PrimaryBrush}"
                                FontWeight="SemiBold"
                                Margin="5,0,0,0"
                                Click="GoToLogin_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
