<Window x:Class="HCI_A.Windows.ServiceInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource ServiceInformationTitle}" 
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        FontFamily="{DynamicResource DefaultFont}"
        ResizeMode="NoResize"
        Background="Transparent">

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="15"
            BorderBrush="{DynamicResource PrimaryBrush}"
            BorderThickness="2"
            Effect="{DynamicResource MaterialShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" CornerRadius="15,15,0,0" Padding="30,20">
                <Grid>
                    <TextBlock x:Name="ServiceNameText" FontSize="28" FontWeight="SemiBold" Foreground="{DynamicResource TextOnPrimaryBrush}" HorizontalAlignment="Center"/>
                    <Button x:Name="CloseButton" HorizontalAlignment="Right" VerticalAlignment="Center" Width="35" Height="35" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="CloseButton_Click">
                        <TextBlock Text="✕" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource TextOnPrimaryBrush}"/>
                    </Button>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" Padding="30,20" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <Border Background="{DynamicResource CardBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="25" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource ServiceInformationTitle}" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,0,15"/>

                            <!--<Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{DynamicResource IdLabel}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox x:Name="IdText" Grid.Column="1" IsReadOnly="True" Foreground="{DynamicResource TextBrush}" Padding="5"/>
                            </Grid>-->

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{DynamicResource NameLabel}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox x:Name="NameTextBox" Grid.Column="1" Foreground="{DynamicResource TextBrush}" Padding="5"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{DynamicResource PriceLabel}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox x:Name="PriceTextBox" Grid.Column="1" Foreground="{DynamicResource TextBrush}" Padding="5"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{DynamicResource DurationLabelFormat}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox x:Name="DurationTextBox" Grid.Column="1" Foreground="{DynamicResource TextBrush}" Padding="5"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{DynamicResource DescriptionLabel}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox x:Name="DescriptionTextBox" Grid.Column="1" Foreground="{DynamicResource TextBrush}" Padding="5" TextWrapping="Wrap"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{DynamicResource TypeLabel}" FontWeight="SemiBold" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBox x:Name="TypeTextBox" Grid.Column="1" IsReadOnly="True" Foreground="{DynamicResource TextBrush}" Padding="5"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <Border x:Name="FooterPanel" Grid.Row="2" Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" CornerRadius="0,0,15,15" Padding="30,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="DeleteButton" Content="{DynamicResource BtnDelete}" Style="{StaticResource ErrorTextButton}" Margin="10,0,20,0" Click="DeleteButton_Click" Height="40"/>
                    <Button x:Name="EditSubmitButton" Content="{DynamicResource BtnEdit}" Style="{StaticResource PrimaryTextButton}" Click="EditSubmitButton_Click" Height="40"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>