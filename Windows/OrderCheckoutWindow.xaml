<Window x:Class="HCI_A.Windows.OrderCheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Checkout"
        Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource DefaultFont}">

    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource PrimaryBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="✅" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextOnPrimaryBrush}"/>
                        <StackPanel>
                            <TextBlock Text="{DynamicResource OrderConfirmation}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextOnPrimaryBrush}"/>
                            <TextBlock x:Name="SalonNameText"
                                       Text="{DynamicResource Loading}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextOnPrimaryBrush}"
                                       Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="✕"
                            Style="{DynamicResource CloseButton}"
                            Click="CloseButton_Click"
                            Width="30" Height="30"/>
                </Grid>
            </Border>


            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="20">
                <StackPanel>

                    <Border Background="{DynamicResource CardBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="15"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource OrderSummary}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Margin="0,0,0,10"/>

                            <StackPanel x:Name="OrderItemsPanel"/>

                            <Separator Margin="0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{DynamicResource TotalAmount}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryLightBrush}"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1"
                                           x:Name="TotalAmountText"
                                           Text="0.00 KM"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource PrimaryLightBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>


                    <Border Background="{DynamicResource CardBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource DeliveryInformation}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryLightBrush}"
                                       Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="{DynamicResource OrderAddress}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,10"/>

                                <TextBox Grid.Row="0" Grid.Column="1"
                                         x:Name="AddressBox"
                                         Style="{DynamicResource InputStyle}"
                                         Margin="0,0,0,10"
                                         Height="40"
                                         Foreground="{DynamicResource TextBrush}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="{DynamicResource OrderPhone}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,10"/>

                                <TextBox Grid.Row="1" Grid.Column="1"
                                         x:Name="PhoneBox"
                                          Style="{DynamicResource InputStyle}"
                                         Margin="0,0,0,10"
                                         Height="40"
                                         Foreground="{DynamicResource TextBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2"
                    Background="{DynamicResource CardBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,12,12"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="{DynamicResource SecureCheckoutTitle}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="{DynamicResource SecureCheckoutSubitle}"
                                   FontSize="10"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <!--<Button Grid.Column="1"
                            Style="{DynamicResource CloseButton}"
                            Click="Cancel_Click"
                            Margin="0,0,10,0"/>-->

                    <Button Grid.Column="2"
                            Content="{DynamicResource PlaceOrder}"
                            Style="{DynamicResource PrimaryLargeButton}"
                            Click="Confirm_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
