<Window x:Class="HCI_A.Windows.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:HCI_A.Controls"
        xmlns:converters="clr-namespace:HCI_A.Converters"
        xmlns:local="clr-namespace:HCI_A.Windows"
        mc:Ignorable="d"
        Title="{DynamicResource LoginPageTitle}" 
        FontFamily="{DynamicResource DefaultFont}"
        Height="600" 
        Width="800"
        Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <Grid>
            <Image Source="/Resources/main_background.jpg" 
                   Stretch="UniformToFill"/>
            <Rectangle Fill="{DynamicResource OverlayBrush}"/>
        </Grid>

        <Border Background="{DynamicResource CardBrush}" 
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="380"
                Margin="20"
                Effect="{DynamicResource MaterialShadow}">

            <StackPanel Margin="40,45">

                <TextBlock Text="{DynamicResource WelcomeText}"
                          FontFamily="Great Vibes"
                          FontSize="45"
                          FontWeight="SemiBold"
                          Foreground="{DynamicResource PrimaryBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="{DynamicResource UsernameTB}"
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             Margin="0,0,0,8"
                             FontSize="13"
                             FontWeight="Medium"/>
                    <Border Background="{DynamicResource InputBackgroundBrush}"
                            CornerRadius="8"
                            BorderThickness="2"
                            BorderBrush="{DynamicResource InputBorderBrush}"
                            x:Name="UsernameBorder">
                        <TextBox x:Name="txtUsername"
                                Height="45"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="15,10"
                                Foreground="{DynamicResource TextBrush}"
                                FontSize="15"/>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="{DynamicResource PasswordTB}"
                             Foreground="{DynamicResource TextSecondaryBrush}"
                             Margin="0,0,0,8"
                             FontSize="13"
                             FontWeight="Medium"/>
                    <Border Background="{DynamicResource InputBackgroundBrush}"
                            CornerRadius="8"
                            BorderThickness="2"
                            BorderBrush="{DynamicResource InputBorderBrush}"
                            x:Name="PasswordBorder">
                        <PasswordBox x:Name="txtPassword"
                                   Height="45"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Padding="15,10"
                                   Foreground="{DynamicResource TextBrush}"
                                   FontSize="15"/>
                    </Border>
                </StackPanel>

                <Button Content="{DynamicResource LoginBTN}"
                Style="{StaticResource PrimaryLargeButton}"
                Height="48"
                Margin="0,0,0,20"
                FontSize="16"
                FontWeight="SemiBold"
                Click="LoginButton_Click"
                IsDefault="True"/>  

                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    <TextBlock Text="{DynamicResource RegistrationQuestion}"
                             Foreground="{DynamicResource TextSecondaryBrush}" Height="18" RenderTransformOrigin="0.16,0.907" Width="137"/>
                    <Button Content="{DynamicResource Register}"
                            Style="{StaticResource LinkButtonStyle}"
                            Foreground="{DynamicResource PrimaryBrush}"
                            Click="GoToRegistration_Click"
                            FontWeight="SemiBold" RenderTransformOrigin="-0.054,0.565" Width="160" Height="22"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
    
    <Window.Resources>

        <BlurEffect x:Key="BlurEffect" Radius="15"/>

        <!--<DropShadowEffect x:Key="MaterialShadow"
                         BlurRadius="25"
                         ShadowDepth="0"
                         Opacity="0.15"
                         Color="{Binding Source={x:Static SystemParameters.HighContrast}, Converter={StaticResource HighContrastToShadowColorConverter}}"/>-->
    </Window.Resources>
</Window>