<Window x:Class="HCI_A.Windows.CartDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shopping Cart Details"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource DefaultFont}">

    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{DynamicResource PrimaryBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="🛒" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextOnPrimaryBrush}"/>
                        <StackPanel>
                            <TextBlock x:Name="SalonNameText"
                                       Text="{DynamicResource ShoppingCart}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextOnPrimaryBrush}"/>
                            <TextBlock x:Name="CartSummaryText"
                                       Text="{DynamicResource Loading}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextOnPrimaryBrush}"
                                       Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Style="{DynamicResource CloseButton}"
                            Click="CloseButton_Click"
                            Width="30" Height="30"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="20">
                <StackPanel x:Name="ItemsPanel"/>
            </ScrollViewer>

            <Border Grid.Row="2"
                    Background="{DynamicResource CardBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,12,12"
                    Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="TotalItemsText"
                                   Text="0 items"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="TotalAmountText"
                                   Text="0.00 KM"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryBrush}"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="{DynamicResource BtnClearCart}"
                            Style="{DynamicResource DeleteButton}"
                            Click="ClearCart_Click"
                            Margin="0,0,10,0"/>

                    <Button Grid.Column="2"
                            Content="{DynamicResource BtnCheckout}"
                            Style="{DynamicResource PrimaryLargeButton}"
                            Click="Checkout_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
