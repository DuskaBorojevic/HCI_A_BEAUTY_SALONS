<Window x:Class="HCI_A.Windows.SalonInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCI_A.Windows"
        mc:Ignorable="d"
        Title="Beauty Salon Information" 
        Height="700" Width="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip" 
        FontFamily="{DynamicResource DefaultFont}"
        Background="Transparent">

    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="15"
            BorderBrush="{DynamicResource PrimaryBrush}"
            BorderThickness="2"
            Effect="{DynamicResource MaterialShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="{DynamicResource PrimaryBrush}" 
                    CornerRadius="15,15,0,0"
                    Padding="30,20">
                <Grid>
                    <TextBlock x:Name="SalonNameText" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               FontFamily="{DynamicResource TitleFont}"
                               Foreground="{DynamicResource TextOnPrimaryBrush}" 
                               HorizontalAlignment="Center"/>

                    <Button x:Name="CloseButton"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Width="35"
                            Height="35"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="17.5">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="✕" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextOnPrimaryBrush}"/>
                    </Button>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" Padding="30,20" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Border Background="{DynamicResource CardBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="25"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LocationInfoLabel}" 
                                       FontSize="18" 
                                       FontFamily="{DynamicResource SecondaryFont}"
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Margin="0,0,0,15"/>

                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{DynamicResource AddressLabel}"
                                           FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="AddressValueText" 
                                           FontSize="14" 
                                           Foreground="{DynamicResource TextBrush}" 
                                           VerticalAlignment="Center" 
                                           TextWrapping="Wrap" 
                                           Grid.Column="1"/>
                            </Grid>

                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{DynamicResource CityLabel}"
                                           FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="PlaceValueText" 
                                           FontSize="14" 
                                           Foreground="{DynamicResource TextBrush}" 
                                           VerticalAlignment="Center" 
                                           Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource CardBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="25"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource WorkingHoursLabel}" 
                                       FontSize="18" 
                                       FontFamily="{DynamicResource SecondaryFont}"
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Margin="0,0,0,15"/>

                            <Border Background="{DynamicResource ElevatedSurfaceBrush}"
                                    BorderBrush="{DynamicResource InputBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                <TextBox x:Name="WorkTimeText" 
                                         Background="{DynamicResource CardBrush}"
                                         BorderThickness="0"
                                         IsReadOnly="True" 
                                         TextWrapping="Wrap"
                                         Height="80"
                                         Foreground="{DynamicResource TextBrush}"
                                         Padding="12,10"
                                         VerticalScrollBarVisibility="Auto"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    
                    <Border Background="{DynamicResource CardBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="25"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource ContactInfoLabel}" 
                                       FontSize="18" 
                                       FontFamily="{DynamicResource SecondaryFont}"
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Margin="0,0,0,15"/>

                            <Border Background="{DynamicResource ElevatedSurfaceBrush}"
                                    BorderBrush="{DynamicResource InputBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                <TextBox x:Name="PhoneText" 
                                         Background="{DynamicResource CardBrush}"
                                         BorderThickness="0"
                                         IsReadOnly="True" 
                                         TextWrapping="Wrap"
                                         Height="40"
                                         VerticalAlignment="Center"
                                         FontSize="16" 
                                         Foreground="{DynamicResource TextBrush}"
                                         Padding="12,10"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource CardBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="25"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource EmployeesLabel}" 
                                       FontSize="18" 
                                       FontFamily="{DynamicResource SecondaryFont}"
                                       FontWeight="SemiBold" 
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       Margin="0,0,0,15"/>

                            <StackPanel x:Name="EmployeesPanel"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2"
                    Background="{DynamicResource CardBrush}"
                    CornerRadius="0,0,15,15"
                    Padding="20"
                    Cursor="Hand"
                    MouseLeftButtonUp="PriceListButton_Click">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="🧾"
                               FontSize="30"
                               Foreground="{DynamicResource PrimaryLightBrush}"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{DynamicResource BtnViewPriceList}"
                               FontSize="16"
                               Foreground="{DynamicResource PrimaryLightBrush}"
                               FontFamily="SecondaryFont"
                               FontWeight="Bold"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
