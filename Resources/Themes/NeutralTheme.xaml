<!-- NEUTRAL THEME -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="PrimaryBrush" Color="#6B8E6B"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#95B795"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#4A634A"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="#B5A394"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="#DCCAB8"/>
    <SolidColorBrush x:Key="SecondaryLightBrush2" Color="#D6C9BC"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#5D4C3E"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAF9"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="#F8F8F7"/>
    <SolidColorBrush x:Key="CardBrush" Color="#F2ECE7"/>
    <!--<SolidColorBrush x:Key="CardBrush" Color="#FDFDFC"/>-->

    <SolidColorBrush x:Key="TextBrush" Color="#2E3330"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5A635C"/>
    <SolidColorBrush x:Key="TextHintBrush" Color="#8D958F"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="BorderBrush" Color="#D6DDD7"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#BDC7BE"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputFocusBrush" Color="#6B8E6B"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="#5A8A5A"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#C65D5D"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#D1A855"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#5A85C6"/>

    <SolidColorBrush x:Key="HoverBrush" Color="#F2F4F2"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#E8EDE8"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#F5F7F5"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#B0B8B2"/>

    <SolidColorBrush x:Key="ShadowBrush" Color="#2E3330" Opacity="0.10"/>
    <SolidColorBrush x:Key="OverlayBrush" Color="#FFFFFF" Opacity="0.90"/>

    <system:String x:Key="ThemeName">Neutral</system:String>
    <system:String x:Key="ThemeIcon">ðŸƒ</system:String>
    <system:String x:Key="ThemeDescription">Modern sage and taupe theme for timeless elegance</system:String>


    <FontFamily x:Key="TitleFont">Calibri</FontFamily>
    <FontFamily x:Key="DefaultFont">Tahoma</FontFamily>
    <FontFamily x:Key="SecondaryFont">Verdana</FontFamily>
    <FontFamily x:Key="ButtonFont">Calibri Bold</FontFamily>

</ResourceDictionary>