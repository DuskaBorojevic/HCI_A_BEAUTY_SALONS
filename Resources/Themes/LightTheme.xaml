<!-- LIGHT THEME -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="PrimaryBrush" Color="#EC4899"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#F472B6"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#BE185D"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="#F9A8D4"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="#FBCFE8"/>
    <SolidColorBrush x:Key="SecondaryLightBrush2" Color="#FFE4F0"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#DB2777"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="#FEFEFE"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBrush" Color="#FFF6FA"/>
    <!--<SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>-->

    <SolidColorBrush x:Key="TextBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="TextHintBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="BorderBrush" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputFocusBrush" Color="#EC4899"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6"/>

    <SolidColorBrush x:Key="HoverBrush" Color="#FDF2F8"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#FCE7F3"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#D1D5DB"/>

    <SolidColorBrush x:Key="ShadowBrush" Color="#EC4899" Opacity="0.08"/>
    <SolidColorBrush x:Key="OverlayBrush" Color="#FFFFFF" Opacity="0.30"/>

    <system:String x:Key="ThemeName">Light</system:String>
    <system:String x:Key="ThemeIcon">âœ¨</system:String>
    <system:String x:Key="ThemeDescription">Clean pink theme for modern beauty salon</system:String>


    <FontFamily x:Key="TitleFont">Comic Sans MS</FontFamily>
    <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
    <FontFamily x:Key="SecondaryFont">Comic Sans MS</FontFamily>
    <FontFamily x:Key="ButtonFont">Segoe UI Semibold</FontFamily>
</ResourceDictionary>