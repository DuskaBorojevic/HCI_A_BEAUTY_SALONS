 <!--DARK THEME -->
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="PrimaryBrush" Color="#7C3AED"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#A855F7"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#5B21B6"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="#C4B5FD"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="#DDD6FE"/>
    <SolidColorBrush x:Key="SecondaryLightBrush2" Color="#EDE9FE"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#8B5CF6"/>

    <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1B2E"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#2A2438"/>
    <SolidColorBrush x:Key="ElevatedSurfaceBrush" Color="#332D47"/>
    <SolidColorBrush x:Key="CardBrush" Color="#2F2A3E"/>

    <SolidColorBrush x:Key="TextBrush" Color="#F8F7FF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#C4B5FD"/>
    <SolidColorBrush x:Key="TextHintBrush" Color="#A78BFA"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="BorderBrush" Color="#4C4563"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#6B5B95"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#2A2438"/>
    <SolidColorBrush x:Key="InputFocusBrush" Color="#7C3AED"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="#10D9A3"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F87171"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FBBF24"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#60A5FA"/>

    <SolidColorBrush x:Key="HoverBrush" Color="#3D3551"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#4A3F5C"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#2A2438"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#6B5B95"/>

    <SolidColorBrush x:Key="ShadowBrush" Color="#000000" Opacity="0.25"/>
    <SolidColorBrush x:Key="OverlayBrush" Color="#1E1B2E" Opacity="0.85"/>

    <system:String x:Key="ThemeName">Purple</system:String>
    <system:String x:Key="ThemeIcon">🔮</system:String>
    <system:String x:Key="ThemeDescription">Deep amethyst theme for sophisticated elegance</system:String>

        
    <FontFamily x:Key="TitleFont">Georgia</FontFamily>
    <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
    <FontFamily x:Key="SecondaryFont">Cambria</FontFamily>
    <FontFamily x:Key="ButtonFont">Segoe UI Bold</FontFamily>
    <!--<FontFamily x:Key="TitleFont">Segoe UI Light</FontFamily>
    <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
    <FontFamily x:Key="SecondaryFont">Segoe UI Semilight</FontFamily>
    <FontFamily x:Key="ButtonFont">Segoe UI Semibold</FontFamily>-->

</ResourceDictionary>

