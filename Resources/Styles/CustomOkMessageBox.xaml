<Window x:Class="HCI_A.Windows.CustomOkMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomOkMessageBox"
        Width="600" Height="200"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        FontFamily="Segoe UI">

    <Border CornerRadius="12"
            Background="{DynamicResource SecondaryLightBrush}"
            BorderBrush="{StaticResource PrimaryBrush}"
            BorderThickness="2"
            Padding="20">

        <DockPanel LastChildFill="True">

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                <TextBlock x:Name="HeaderTextBlock"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBrush}"
                           VerticalAlignment="Center"
                           FontFamily="{DynamicResource SecondaryFont}"
                           Text="Header"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="IconTextBlock" 
                           Text="👏🏼" FontSize="30" VerticalAlignment="Top" Margin="0,0,10,0" Foreground="White"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="ContentTextBlock"
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontFamily="Segoe UI"
                               FontWeight="SemiBold"
                               FontSize="18"/>
                </ScrollViewer>
            </StackPanel>

            <Button Content="OK"
                Width="90" 
                Height="35" 
                Style="{DynamicResource PrimaryTextButton}"
                BorderBrush="White"
                FontWeight="Bold"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="10"
                    Click="OkButton_Click"/>
        </DockPanel>
    </Border>

</Window>
